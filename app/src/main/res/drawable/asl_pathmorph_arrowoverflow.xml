<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- 箭头 -->
  <item
    android:id="@+id/arrowover"
    android:drawable="@drawable/vd_pathmorph_arrowover"
    android:state_checked="true"/>

  <!-- 菜单 -->
  <item
    android:id="@+id/flow"
    android:drawable="@drawable/vd_pathmorph_flow"/>

  <!-- 箭头到菜单的动画 -->
  <transition
    android:drawable="@drawable/avd_pathmorph_arrowover_to_flow"
    android:fromId="@id/arrowover"
    android:toId="@id/flow"/>

  <!-- 菜单到箭头的动画 -->
  <transition
    android:drawable="@drawable/avd_pathmorph_flow_to_arrowover"
    android:fromId="@id/flow"
    android:toId="@id/arrowover"/>

</animated-selector>